            <select class="form-select" name="Area" id="Area">
                <option value="">請選擇</option>
            </select>
        </div>

        <div class="form-group">
            <label for="Floor">樓層</label>
            <select class="form-select" name="Floor" id="Floor">
                <option value="">請選擇</option>
            </select>
        </div>

        @* <div class="form-group">
        <label for="IPSN">巡檢計畫編號</label>
        <select class="form-select" name="IPSN" id="IPSN">
        <option value="">請選擇</option>
        </select>
        </div> *@

        @* <div class="form-group">
        <label for="IPName">巡檢計畫名稱</label>
        <select class="form-select" name="IPName" id="IPName">
        <option value="">請選擇</option>
