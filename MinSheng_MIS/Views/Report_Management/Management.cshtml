<script src="../../Scripts/datatable.js"></script>
<script src="../../Scripts/tool.js"></script>
<script src="/Scripts/AreaFloorEvent.js"></script>
<script>
    var baseUrl = "/Report_Management/";

    var getGridJSON = '@Url.Action("Report_Management", "Datagrid")';
    //const fakeData = [
    //    {
    //        ReportState: "已派工",
    //        ReportLevel: "最速件",
    //        Area: "A棟",
    //        Floor: "1F",
    //        ReportSource: "APP",
    //        RSN: "R23010601",
    //        Date: "2023/1/6 15:00:02",
    //        PropertyCode: "無",
    //        ESN: "E00001",
    //        EName: "日光燈",
    //        ReportContent: "故障",
    //        MyName: "王大明",
    //    }
    //]

    $(async function () {
        await AreaFloorEvent();
        await pushSelect("ReportState", '@Url.Action("Report_Management_Management_ReportFormState", "DropDownList")');
        //document.getElementById('Area').value = '1'
        await pushSelect("ReportLevel", '@Url.Action("ReportLevel", "DropDownList")');
        await pushSelect("InformantUserID", '@Url.Action("ReportUser", "DropDownList")');
        Initialize_DataGrid(getGridJSON);
        addSearchAreaClickEvent();
        //$("#Area option[value=1]").attr('selected', 'selected');
    });
    function Initialize_DataGrid(getGridJSON) {

        $('#DataGrid').datagrid({

            url: getGridJSON,
            method: 'POST',
            queryParams: getQueryParams(),
            rownumbers: true,
            idField: 'Date',
            sortName: 'Date',
            remoteSort: false,
            sortOrder: 'desc',
            fit: true,
            frozenColumns: [[
                {
                    field: '_detail', align: 'center',
                    formatter: (val, row, index) => {
                        return `<button class="btn btn-datagrid" onclick="onDetail(${index})">詳情</button>`;
                    }
                },
                {
                    field: '_dispatch', align: 'center',
                    formatter: (val, row, index) => {
                        let disabled = (row.EState != "停用") && (row.ReportState == "待派工" || row.ReportState == "未完成" || row.ReportState == "審核未過") ? '' : 'disabled';
                        return `<button class="btn btn-datagrid" onclick="onDispatch(${index})" ${disabled}>派工</button>`;
                    }
                },
                {
                    field: '_locate', align: 'center',
                    formatter: (val, row, index) => {
                        let disabled = row.DBID == null || row.DBID == "" ? 'disabled' : '';
                        return `<button class="btn btn-datagrid" onclick="onLocate(${index})" ${disabled}>定位</button>`;
                    }
                },
                {
                    field: '_cancel', align: 'center',
                    formatter: (val, row, index) => {
                        let disabled = row.ReportState == "保留中(待派工)" || row.ReportState == "保留中(未完成)" || row.ReportState == "保留中(審核未過)" ? '' : 'disabled'
                        return `<button class="btn btn-datagrid btn-datagrid-secondary" onclick="onCancel(${index})" ${disabled}>取消保留</button>`;
                    }
                },
            ]],
            columns: [[
                { field: 'ReportState', title: '報修單狀態', align: 'center', width: 145, sortable: true },
                { field: 'ReportLevel', title: '報修等級', align: 'center', width: 100, sortable: true },
                { field: 'Area', title: '棟別', align: 'center', width: 130, sortable: true },
                { field: 'Floor', title: '樓層', align: 'center', width: 80, sortable: true },
                { field: 'ReportSource', title: '報修來源', align: 'center', width: 100, sortable: true },
                { field: 'RSN', title: '報修單號', align: 'center', width: 116, sortable: true },
                { field: 'Date', title: '報修時間', align: 'center', width: 200, sortable: true },
                { field: 'PropertyCode', title: '國有財產編碼', align: 'center', width: 150, sortable: true },
                { field: 'ESN', title: '設備編號', align: 'center', width: 100, sortable: true },
                { field: 'EState', title: '設備狀態', align: 'center', width: 100, hidden: true },
                { field: 'EName', title: '設備名稱', align: 'center', width: 220, sortable: true },
                { field: 'MyName', title: '報修人員', align: 'center', width: 110, sortable: true },
                { field: 'ReportContent', title: '報修內容', align: 'center', width: 300, sortable: true },
                { field: 'DBID', title: 'DBID', align: 'center', width: 150, hidden: true },
            ]],
            singleSelect: true,
            selectOnCheck: true,
            checkOnSelect: false,

            pagination: true,
            pagePosition: 'bottom',
            pageSize: 10
        });
        //------------Pager --------------------------------------------------
        var pager = $('#DataGrid').datagrid('getPager');
        $(pager).pagination({
            pageSize: 10,
            showPageList: true,
            pageList: [10, 20, 50],
            beforePageText: '第',
            afterPageText: '頁，共 {pages} 頁',
            displayMsg: '顯示 {from} 到 {to} 筆資料，共 {total} 筆資料'
        });
    }

    // datagrid onClick Function
    function onDetail(index) {
        let row = $('#DataGrid').datagrid('getRows')[index];
        let url = baseUrl + 'Read' + `/${row.RSN}`;
        window.open(url, "_blank");
    }

    function onDispatch(index) {
        let row = $('#DataGrid').datagrid('getRows')[index];
        let url = baseUrl + 'Dispatch';
        window.open(url, "_self");
    }

    function onLocate(index) {
        let row = $('#DataGrid').datagrid('getRows')[index];
        let url = baseUrl + 'Locate';
        window.open(url, "_self");
    }

    function onCancel(index) {
        let row = $('#DataGrid').datagrid('getRows')[index];
        let url = baseUrl + 'Cancel' + `/${row.RSN}`;
        $.ajax({
            url: url,
            method: "Post",
            dataType: "json",
            contentType: "application/json;charset=utf-8",
            success: onSuccess,
            error: onError
        })
        function onSuccess(res) {
            createDialogModal({
                id: "DialogModal-Success",
                inner: "取消保留成功！",
            })
            $('#DataGrid').datagrid('clearSelections');
            $('#DataGrid').datagrid('reload');
        }

        function onError(res) {
            createDialogModal({
                id: "DialogModal-Error",
                inner: "取消保留失敗！",
            })
        }
    }

    //search area onClick Function
    function addSearchAreaClickEvent() {
        $("#clear").click(function () {
            $(".search-area form")[0].reset();
            pushSelect("FSN", '@Url.Action("Floor", "DropDownList")');
        });

        $("#search").click(function () {
            $('#DataGrid').datagrid('load', getQueryParams())
        });

        $("#export").click(function () {
            let url = baseUrl + 'Export';
            window.open(url, "_self");
        });
    }
</script>
