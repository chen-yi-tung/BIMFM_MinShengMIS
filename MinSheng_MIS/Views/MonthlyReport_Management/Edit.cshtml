        function onSuccess(res) {
            console.log(res);
            for (const [k, v] of Object.entries(res)) {
                $("#" + k).val(v);
            }
            $("#MRFileName").text(res.FilePath.split("/").at(-1));
            $("#MRFileGroup").removeClass('d-none');
            $("#_checkMRFile").prop("checked", true);
        }
        function onError(res) {
            console.log(res);
        }
    }

    function save() {
        let isValidity = [...document.forms].map(e => e.reportValidity()).every(e => e);
        console.log("isValidity():", isValidity)
        if (!isValidity) return;

        var form = new FormData();
        form.append("MRTitle", document.getElementById("MRTitle").value);
        form.append("MRName", document.getElementById("MRName").value);
        form.append("MRDescription", document.getElementById("MRDescription").value);
        var files = $("#MRFile").get(0).files;
        if (files.length > 0) {
            form.append("MRFile", files[0]);
        }
        console.log(Object.fromEntries(form.entries()));
        $.ajax({
            url: '@Url.Action("EditMonthlyReport", "MonthlyReport_Management")',
            data: form,
            type: "POST",
            contentType: false,
            processData: false,
            success: onSuccess,
            error: onError
        })
        function onSuccess(res) {
            console.log(res);
            createDialogModal({
                id: "DialogModal-Success", inner: "新增成功！",
                onHide: () => { window.location.href = "/MonthlyReport_Management/Management"; }
            });
        }
        function onError(res) {
            console.log(res);
            createDialogModal({ id: "DialogModal-Error", inner: `新增失敗！` + `${res.responseText}` })
        }
    }

    function addButtonEvent() {
        $("#back").click(function () {
            history.back();
        })

        $("#MRFile").change(function (e) {
            console.log(this.files);
            if (this.files && this.files.length !== 0) {
                let file = this.files[0];
                $("#MRFileName").text(file.name);
                $("#MRFileGroup").removeClass('d-none');
                $("#_checkMRFile").prop("checked", true);
            }
        })

        $("#MRFileDelete").click(function () {
            $("#MRFile").val('');
            $("#MRFileName").text('');
            $("#MRFileGroup").addClass('d-none');
            $("#_checkMRFile").prop("checked", false);
        })

        $("#submit").click(function () {
            save();
        })
    }
</script>

