@{
    ViewBag.Title = "編輯月報";
}
<style>
    @@media (min-width: 992px) {
        .edit-area .form {
            grid-template-columns: 250px 250px;
        }
    }
</style>
<h2>@ViewBag.Title</h2>
<div class="edit-area edit-area-small">
    <form class="form pt-0">
        <input type="text" name="MRSN" id="MRSN" hidden>
        <div class="form-group required">
            <label for="MRTitle">月報名稱</label>
            <input class="form-control" id="MRTitle" name="MRTitle" type="text" required>
        </div>

        <div class="form-group">
            <label for="MRName">上傳者</label>
            <input class="form-control" id="MRName" name="MRName" type="text" readonly disabled>
        </div>

        <div class="form-group" style="grid-column: auto/span 2;">
            <label for="MRDescription">內容說明</label>
            <textarea class="form-control" name="MRDescription" id="MRDescription" rows="1"
                style="resize: vertical;"></textarea>
        </div>

        <div class="form-group g-col-2 required">
            <label for="">月報檔案</label>

            <div class="edit-button-area justify-content-start align-items-center mt-1 flex-wrap flex-lg-nowrap">
                <div class="d-lg-contents d-flex w-100" style="gap: 14px;">
                    <label for="MRFile" type="button" class="btn btn-search w-lg-auto w-100 h-100 mt-0 flex-shrink-0">
                        選擇檔案
                    </label>
                </div>
                <div id="MRFileGroup"
                    class="order-first order-lg-last d-flex align-items-center text-start text-light w-100 w-lg-auto d-none">
                    <div id="MRFileName" class="d-inline-block text-break me-2" style="margin: 0.375rem;"></div>
                    <button type="button" class="btn-delete-item flex-shrink-0" id="MRFileDelete"></button>
                </div>
            </div>
            <input id="MRFile" name="MRFile" type="file" class="form-file-input">
            <input type="checkbox" id="_checkMRFile" name="_checkMRFile" class="form-file-input" required
                oninvalid="this.setCustomValidity(this.validity.valueMissing ? '請選擇檔案' : '')">
        </div>

    </form>
</div>
<div class="edit-button-area">
    <button class="btn btn-back" id="back">返回</button>
    <button class="btn btn-export" id="submit">儲存</button>
</div>
<script src="/Scripts/datatable.js"></script>
<script src="/Scripts/tool.js"></script>
<script>
    const apiUrl = null;
    const fakeData = {
        MRSN: "1",
        MRTitle: "2023-5月月報",
        MRName: "王大明",
        MRDate: "2023/5/22",
        MRDescription: "OOXX",
        FilePath: "/Files/a.pdf"
    }

    $(async function () {
        addButtonEvent();
        readData(apiUrl);
    });

