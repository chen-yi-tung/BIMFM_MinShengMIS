@{
    ViewBag.Title = "巡檢資訊管理";
}
@section styles {
    @Styles.Render("https://cdn.jsdelivr.net/npm/simplebar@latest/dist/simplebar.css")
    @Styles.Render("~/Content/BigScreen.css")
    @Styles.Render("~/Content/InformationManagement.css")

    @Scripts.Render("https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js")
    @Scripts.Render("https://cdn.jsdelivr.net/npm/simplebar@latest/dist/simplebar.min.js")
}

<h2>@ViewBag.Title</h2>

<div class="date-search-area">
    <button class="btn btn-alert float-end" data-bs-toggle="collapse" data-bs-target="#AlertCollapse">
        <i class="icon-ring"></i>
        <span class="badge">5</span>
        <div class="collapse alert-collapse" id="AlertCollapse">
            <div class="collapse-body">
                <a class="alert-item" target="_blank" data-level="1" data-process-state="1">
                    <i class="icon-alert"></i>
                    <span class="road">進流抽水站2F</span>
                    <span class="time">13:05:20</span>
                    <span class="title">進流抽水站2F火災</span>
                    <span class="process-state"></span>
                </a>
                <a class="alert-item" target="_blank" data-level="1" data-process-state="1">
                    <i class="icon-alert"></i>
                    <span class="road">進流抽水站2F</span>
                    <span class="time">13:05:20</span>
                    <span class="title">進流抽水站2F火災</span>
                    <span class="process-state"></span>
                </a>
                <a class="alert-item" target="_blank" data-level="2" data-process-state="2">
                    <i class="icon-alert"></i>
                    <span class="road">進流抽水站2F</span>
                    <span class="time">13:05:20</span>
                    <span class="title">進流抽水站2F火災</span>
                    <span class="process-state"></span>
                </a>
                <a class="alert-item" target="_blank" data-level="2" data-process-state="3">
                    <i class="icon-alert"></i>
                    <span class="road">進流抽水站2F</span>
                    <span class="time">13:05:20</span>
                    <span class="title">進流抽水站2F火災</span>
                    <span class="process-state"></span>
                </a>
                <a class="alert-item" target="_blank" data-level="2" data-process-state="3">
                    <i class="icon-alert"></i>
                    <span class="road">進流抽水站2F</span>
                    <span class="time">13:05:20</span>
                    <span class="title">進流抽水站2F火災</span>
                    <span class="process-state"></span>
                </a>
            </div>
        </div>
    </button>

    <div class="form-group">
        <label for="StartYear">年度</label>
        <select name="StartYear" id="StartYear" class="form-select">
            <option value="111">111</option>
            <option value="112">112</option>
            <option value="113">113</option>
        </select>
    </div>
    <div class="form-group">
        <label for="StartMonth">月份</label>
        <select name="StartMonth" id="StartMonth" class="form-select">
            <option value="1">一月</option>
            <option value="2">二月</option>
            <option value="3">三月</option>
            <option value="4">四月</option>
            <option value="5">五月</option>
            <option value="6">六月</option>
            <option value="7">七月</option>
            <option value="8">八月</option>
            <option value="9">九月</option>
            <option value="10">十月</option>
            <option value="11">十一月</option>
            <option value="12">十二月</option>
        </select>
    </div>
    <div class="form-group m-0">
        <label for="">~</label>
    </div>
    <div class="form-group">
        <label for="EndYear">年度</label>
        <select name="EndYear" id="EndYear" class="form-select">
            <option value="111">111</option>
            <option value="112">112</option>
            <option value="113">113</option>
        </select>
    </div>
    <div class="form-group">
        <label for="EndMonth">月份</label>
        <select name="EndMonth" id="EndMonth" class="form-select">
            <option value="1">一月</option>
            <option value="2">二月</option>
            <option value="3">三月</option>
            <option value="4">四月</option>
            <option value="5">五月</option>
            <option value="6">六月</option>
            <option value="7">七月</option>
            <option value="8">八月</option>
            <option value="9">九月</option>
            <option value="10">十月</option>
            <option value="11">十一月</option>
            <option value="12">十二月</option>
        </select>
    </div>
</div>

<div class="info-area">
    <div class="info-box main">
        <div class="hstack">
            <div class="w-50" role="chart">
                <h5>巡檢總計畫完成狀態</h5>
                <div id="Inspection_Complete_State" class="horizontal catalog-line"></div>
            </div>
            <div class="vr"></div>
            <div class="w-50" role="chart">
                <h5>巡檢總設備狀態</h5>
                <div id="Inspection_Equipment_State" class="horizontal catalog-line"></div>
            </div>
        </div>
        <div class="table w-100">
            <div class="row thead">
                <div class="col">人員姓名</div>
                <div class="col">巡檢總數</div>
                <div class="col">保養總數</div>
                <div class="col">維修總數</div>
                <div class="col">巡檢完成數</div>
                <div class="col">完成率</div>
            </div>
            <div class="tbody" id="Inspection_All_Members" data-simplebar data-simplebar-auto-hide="false" data-simplebar-force-visible="y">
                <div class="row">
                    <div class="col">王OO</div>
                    <div class="col">28</div>
                    <div class="col">28</div>
                    <div class="col">28</div>
                    <div class="col text-success">28</div>
                    <div class="col text-success">100%</div>
                </div>
            </div>
        </div>
    </div>
    <div class="info-box side1">
        <h5>緊急事件等級占比 / 處理狀況</h5>
        <div class="hstack" role="chart">
            <div id="Inspection_Aberrant_Level" class="horizontal"></div>
            <div class="vr"></div>
            <div id="Inspection_Aberrant_Resolve" class="horizontal catalog-line"></div>
        </div>
    </div>
    <div class="info-box side2" role="chart">
        <h5>設備保養及維修進度統計</h5>
        <div id="Equipment_Maintain_And_Repair_Statistics" class="bar"></div>
    </div>
    <div class="info-box minx1" role="chart">
        <h5>設備故障等級分布</h5>
        <div id="Equipment_Level_Rate" class="horizontal align-items-end"></div>
    </div>
    <div class="info-box minx2" role="chart">
        <h5>設備故障類型占比</h5>
        <div id="Equipment_Type_Rate" class="horizontal align-items-end"></div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/Scripts/BigScreen/ChartPlugin.js")
    @Scripts.Render("~/Scripts/InspectionPlan/InformationManagement.js")
}