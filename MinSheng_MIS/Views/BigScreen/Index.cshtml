@{
    Layout = null;
    ViewBag.Title = "戰情大屏";
}
@{
    string controllerName = ViewContext.RouteData.Values["controller"] as string;
}

<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BIM智慧管理系統</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="/Content/icomoon-v1.0/style.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/BigScreen.css")
    @Styles.Render("https://cdn.jsdelivr.net/npm/simplebar@latest/dist/simplebar.css")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/popper.min.js")
    @Scripts.Render("~/Content/bootstrap-5.2.3-dist/js/bootstrap.min.js")
    @Scripts.Render("https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js")
    @Scripts.Render("https://cdn.jsdelivr.net/npm/simplebar@latest/dist/simplebar.min.js")
</head>

<body>
    <div class="bigscreen-container">
        <section class="start-area">
            <div class="header-area">
                <div class="header-img">
                    <img src="/Content/img/bs-logo.png">
                </div>
                <div class="header-current-time" id="header-current-time">2022/09/01 16:41:22</div>
                <div class="header-search row">
                    <div class="col">
                        <select class="form-select marker" name="Factory" id="Factory">
                            <option value="">請選擇廠區</option>
                        </select>
                        <i class="icon-marker"></i>
                    </div>
                    <div class="col col-auto" style="width: 9.375rem;">
                        <button class="btn" id="header-search-btn">搜尋</button>
                    </div>
                </div>
                <div class="header-search row">
                    <div class="col">
                        <select class="form-select" name="Area" id="Area">
                            <option value="">請選擇棟別</option>
                        </select>
                    </div>
                    <div class="col col-auto" style="width: 9.375rem;">
                        <select class="form-select" name="Floor" id="Floor">
                            <option value="">請選擇樓層</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="info-area">
                <div class="info-box" id="Sewage">
                    <div class="info-box-header">當日汙水處理量</div>
                    <div class="info-box-body">
                        <div class="d-flex flex-column gap-3 ms-auto me-auto" style="width: 20rem;">
                            <div class="hstack justify-content-center gap-3">
                                <div>
                                    <span class="value" id="Sewage_Treated">3215</span>
                                    <span class="unit">ml</span>
                                </div>
                                <div class="vr"></div>
                                <div class="text-center">
                                    <div class="label">剩餘水量：</div>
                                    <div class="value">
                                        <span id="Sewage_Last">6123</span>
                                        <span class="unit">ml</span>
                                    </div>
                                </div>
                            </div>
                            <div class="progress" id="Sewage_Progress">
                                <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25"
                                    aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="info-box">
                    <div class="info-box-header">用電資訊</div>
                    <div class="info-box-body" role="chart">
                        <div id="Electricity_Usage_Information"></div>
                    </div>
                </div>
                <div class="info-box">
                    <div class="info-box-header">環境資訊</div>
                    <div class="info-box-body d-flex flex-column gap-2">
                        <div class="d-flex gap-2">
                            <div class="color-card v">
                                <div class="img">
                                    <img id="Environment_Weather" src="/Content/img/weather/heavy-rain.png">
                                </div>
                            </div>
                            <div class="color-card v">
                                <div class="label">溫度</div>
                                <div class="d-flex gap-2 align-items-center">
                                    <span class="value" style="--c: #FFC121;" id="Environment_Temp">24</span>
                                    <span class="unit">°C</span>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <div class="color-card v">
                                <div class="label">相對溼度</div>
                                <div class="d-flex gap-2 align-items-center">
                                    <span class="value" style="--c: #27B54F;" id="Environment_Hum">66.2</span>
                                    <span class="unit">%</span>
                                </div>
                            </div>
                            <div class="color-card v">
                                <div class="label">降雨率</div>
                                <div class="d-flex gap-2 align-items-center">
                                    <span class="value" style="--c: #4C9BF9;" id="Environment_RainRate">90</span>
                                    <span class="unit">%</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="center-area">
            <div class="viewerContainer">
                <div id="viewer3d"></div>
            </div>
            <div class="position-absolute top-0 end-0 p-4">
                <button class="btn btn-alert" data-bs-toggle="collapse" data-bs-target="#AlertCollapse">
                    <i class="icon-ring"></i>
                    <span class="badge">5</span>
                </button>
                <div class="collapse alert-collapse" id="AlertCollapse">

                </div>
            </div>
            <div class="marquee">跑馬燈</div>
        </section>
        <section class="end-area">
            <div class="header-area">
                <div class="btn-group">
                    <input type="radio" class="btn-check" name="Mode_Switch" id="Mode_Home" value="home" checked>
                    <label class="btn" for="Mode_Home"><i class="icon-home"></i>首頁</label>

                    <input type="radio" class="btn-check" name="Mode_Switch" id="Mode_Equip" value="equip">
                    <label class="btn" for="Mode_Equip"><i class="icon-equip"></i>設備模式</label>

                    <input type="radio" class="btn-check" name="Mode_Switch" id="Mode_Walk" value="walk">
                    <label class="btn" for="Mode_Walk"><i class="icon-walk"></i>巡檢</label>
                </div>
            </div>
            <div class="info-area" data-mode="home">
                <div class="info-box">
                    <div class="info-box-header">當前巡檢狀況</div>
                    <div class="info-box-body">
                        <div class="d-flex" style="gap: 0.75rem;">
                            <div class="color-card h shadow" style="--c: #40D1FF;">
                                <div class="label" style="--c: #0088D4;">目前巡檢人數</div>
                                <div class="value" id="Inspection_Members_All">10</div>
                            </div>
                            <div class="color-card h shadow" style="--c: #FFCD1D;">
                                <div class="label" style="--c: #FF891D;">偏離路線人數</div>
                                <div class="value" id="Inspection_Members_Notice">5</div>
                            </div>
                            <div class="color-card h shadow" style="--c: #FF6F6F;">
                                <div class="label" style="--c: #FF3838;">狀態異常人數</div>
                                <div class="value" id="Inspection_Members_Alert">2</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="info-box">
                    <div class="info-box-header">空間人員即時位置</div>
                    <div class="info-box-body" style="height: 12.5rem;" data-simplebar data-simplebar-auto-hide="false"
                        data-simplebar-force-visible="y">
                        <div class="accordion plan-accordion" id="Inspection_Current_Pos">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button" data-bs-toggle="collapse"
                                        data-bs-target="#Inspection_Current_Pos_P1">
                                        <span class="name">第一計畫</span>
                                        <i class="icon-people"></i>
                                        <span class="value">3</span>
                                        <span class="unit">人</span>
                                    </button>
                                </h2>
                                <div id="Inspection_Current_Pos_P1" class="accordion-collapse collapse show"
                                    data-bs-parent="#Inspection_Current_Pos">
                                    <div class="accordion-body">
                                        <div class="plan-people">
                                            <!--<div class="human"><i class="icon-human"></i></div>-->
                                            <div class="plan-people-group">
                                                <div class="plan-people-info">
                                                    <span class="name">Pt01 王大明</span>
                                                    <i class="icon-heart"></i>
                                                    <span class="label">心率：</span>
                                                    <span class="value">110</span>
                                                    <span class="unit">下/分</span>
                                                </div>
                                                <div class="plan-people-info">
                                                    <span class="name">Pt02 任趙仁</span>
                                                    <i class="icon-heart"></i>
                                                    <span class="label">心率：</span>
                                                    <span class="value">96</span>
                                                    <span class="unit">下/分</span>
                                                </div>
                                                <div class="plan-people-locate">
                                                    <span class="label">即時位置：</span>
                                                    <span class="value">A區2F</span>
                                                    <button class="btn" id="goToLocation"><i
                                                            class="icon-arrow-right"></i></button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="plan-people">
                                            <!--<div class="human"><i class="icon-human"></i></div>-->
                                            <div class="plan-people-group">
                                                <div class="plan-people-info">
                                                    <span class="name">Pt01 王大明</span>
                                                    <i class="icon-heart"></i>
                                                    <span class="label">心率：</span>
                                                    <span class="value">110</span>
                                                    <span class="unit">下/分</span>
                                                </div>
                                                <div class="plan-people-info">
                                                    <span class="name">Pt02 任趙仁</span>
                                                    <i class="icon-heart"></i>
                                                    <span class="label">心率：</span>
                                                    <span class="value">96</span>
                                                    <span class="unit">下/分</span>
                                                </div>
                                                <div class="plan-people-locate">
                                                    <span class="label">即時位置：</span>
                                                    <span class="value">A區2F</span>
                                                    <button class="btn" id="goToLocation"><i
                                                            class="icon-arrow-right"></i></button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button" data-bs-toggle="collapse"
                                        data-bs-target="#Inspection_Current_Pos_P2">
                                        <span class="name">第二計畫</span>
                                        <i class="icon-people"></i>
                                        <span class="value">12</span>
                                        <span class="unit">人</span>
                                    </button>
                                </h2>
                                <div id="Inspection_Current_Pos_P2" class="accordion-collapse collapse show"
                                    data-bs-parent="#Inspection_Current_Pos">
                                    <div class="accordion-body">
                                        <div class="plan-people">
                                            <!--<div class="human"><i class="icon-human"></i></div>-->
                                            <div class="plan-people-group">
                                                <div class="plan-people-info">
                                                    <span class="name">Pt01 王大明</span>
                                                    <i class="icon-heart"></i>
                                                    <span class="label">心率：</span>
                                                    <span class="value">110</span>
                                                    <span class="unit">下/分</span>
                                                </div>
                                                <div class="plan-people-info">
                                                    <span class="name">Pt02 任趙仁</span>
                                                    <i class="icon-heart"></i>
                                                    <span class="label">心率：</span>
                                                    <span class="value">96</span>
                                                    <span class="unit">下/分</span>
                                                </div>
                                                <div class="plan-people-locate">
                                                    <span class="label">即時位置：</span>
                                                    <span class="value">A區2F</span>
                                                    <button class="btn" id="goToLocation"><i
                                                            class="icon-arrow-right"></i></button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="plan-people">
                                            <!--<div class="human"><i class="icon-human"></i></div>-->
                                            <div class="plan-people-group">
                                                <div class="plan-people-info">
                                                    <span class="name">Pt01 王大明</span>
                                                    <i class="icon-heart"></i>
                                                    <span class="label">心率：</span>
                                                    <span class="value">110</span>
                                                    <span class="unit">下/分</span>
                                                </div>
                                                <div class="plan-people-info">
                                                    <span class="name">Pt02 任趙仁</span>
                                                    <i class="icon-heart"></i>
                                                    <span class="label">心率：</span>
                                                    <span class="value">96</span>
                                                    <span class="unit">下/分</span>
                                                </div>
                                                <div class="plan-people-locate">
                                                    <span class="label">即時位置：</span>
                                                    <span class="value">A區2F</span>
                                                    <button class="btn" id="goToLocation"><i
                                                            class="icon-arrow-right"></i></button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="info-box">
                    <div class="info-box-header">巡檢異常狀態</div>
                    <div class="info-box-body">
                        <div class="hstack gap-3 align-items-start" role="chart">
                            <div id="Inspection_Aberrant_Level" class="vertical"></div>
                            <div class="vr"></div>
                            <div id="Inspection_Aberrant_Resolve" class="vertical"></div>
                        </div>
                    </div>
                </div>
                <div class="info-box">
                    <div class="info-box-header">設備總妥善率</div>
                    <div class="info-box-body" role="chart">
                        <div id="Equipment_Availability_Rate" class="horizontal catalog-line"></div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    @Scripts.Render("~/Scripts/BigScreen.js")
</body>

</html>
