@{
    ViewBag.Title = "廠商管理";
}

@section styles {
    @Html.Partial("DataGridScripts")
}

<h2>@ViewBag.Title</h2>

<button class="btn btn-create" id="create">新增廠商</button>
<div class="search-area">
    <form class="form" method="post" action="" id="form">

        <div class="form-group">
            <label for="MFRName">廠商名稱</label>
            <input class="form-control" id="MFRName" name="MFRName" type="text" />
        </div>

        <div class="form-group">
            <label for="ContactPerson">聯絡人</label>
            <input class="form-control" id="ContactPerson" name="ContactPerson" type="text" />
        </div>

        <div class="form-group">
            <label for="MFRTelNO">電話</label>
            <input class="form-control" id="MFRTelNO" name="MFRTelNO" type="text" />
        </div>

        <div class="form-group">
            <label for="MFRMBPhone">手機</label>
            <input class="form-control" id="MFRMBPhone" name="MFRMBPhone" type="text" />
        </div>

        <div class="form-group">
            <label for="MFRMainProduct">主要商品</label>
            <input class="form-control" id="MFRMainProduct" name="MFRMainProduct" type="text" />
        </div>

        <div class="form-group">
            <label for="MFRAddress">地址</label>
            <input class="form-control" id="MFRAddress" name="MFRAddress" type="text" />
        </div>

        <div class="button-group">
            <button type="button" class="btn btn-search" id="search">查詢</button>
            <button type="reset" class="btn btn-clear" id="clear">清除</button>
        </div>

    </form>
</div>

<div class="datagrid-area">
    <table id="DataGrid"></table>
</div>

@section scripts {
<script>

    var getGridJSON = '@Url.Action("ManufacturerInfo_Management", "Datagrid")';
    var DataGrid;
    

    const fakeData = [
        {
            MFRSN: "00001",
            MFRName: "OO廠商",
            ContactPerson: "王大明",
            MFRTelNO: "02-28966653",
            MFRMBPhone: "0955641236",
            MFRMainProduct: "機械相關耗材",
            MFREmail: "gresw@gmail.com",
            MFRAddress: "OOOOXOOXOO",
            MFRWeb: "OOXOXOXO@XOXO",
        }
    ]

    $(async function () {
        Initialize_DataGrid(getGridJSON);
        addSearchAreaClickEvent();
    });

    function Initialize_DataGrid(getGridJSON) {
        let dg = new DG();
        DataGrid = dg.init("#DataGrid", {
            url: getGridJSON,
            //data: fakeData,
            method: 'POST',
            queryParams: getQueryParams(),
            idField: 'MFRSN',
            //sortName: 'MFRSN',
            remoteSort: true,
            frozenColumns: [[
                dg.frozenColumn('_detail', (v, row, i) => dg.eventButton(i, "詳情", "detail")),
                dg.frozenColumn('_edit', (v, row, i) => dg.eventButton(i, "編輯", "edit")),
                //dg.frozenColumn('_delete', (v, row, i) => dg.eventButton(i, "刪除", "delete", { className: "btn btn-datagrid btn-delete" })),
            ]],
            columns: [[
                dg.hiddenColumn('MFRSN'),
                dg.column('MFRName', '廠商名稱', 200),
                dg.column('ContactPerson', '聯絡人', 110),
                dg.column('MFRTelNO', '電話', 140),
                dg.column('MFRMBPhone', '手機', 140),
                dg.column('MFRMainProduct', '主要商品', 150),
                dg.column('MFREmail', '電子郵件', 300),
                dg.column('MFRAddress', '地址', 300),
                dg.column('MFRWeb', '企業網站', 300, (v, row, i) => {
                    return v != null ? `<a href="${v}" target="_blank">${v}</a>` : '';
                }),
            ]]
        })
        dg.addEvent("detail", function (row, i) {
            window.open(`${baseUrl}/Read/${row.MFRSN}`, "_blank")
        })
        dg.addEvent("edit", function (row, i) {
            window.open(`${baseUrl}/Edit/${row.MFRSN}`, "_self")
        })
        /* dg.addEvent("delete", function (row, i) {
            window.open(`${baseUrl}/Delete/${row.MFRSN}`, "_self")
        }) */
    }

    //search area onClick Function
    function addSearchAreaClickEvent() {

        $("#search").click(function () {
            DataGrid.datagrid('load', getQueryParams());
        });

        $("#create").click(function () {
            window.open(`${baseUrl}/Create`, "_self");
        });
    }
</script>
}