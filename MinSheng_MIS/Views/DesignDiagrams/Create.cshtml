@{
    ViewBag.Title = "新增設計圖說";
}

@section styles {
    <script src="/Scripts/datatable.js" defer></script>
    <script src="/Scripts/tool.js" defer></script>
    <style>
        @@media (min-width: 992px) {
            .edit-area .form {
                grid-template-columns: 250px 250px;
            }
        }
    </style>
}

<h2>@ViewBag.Title</h2>
<section>
    <div class="edit-area edit-area-xs flex-lg-row">
        <form class="form">
            <div class="form-group">
                <label for="ImgVersion">圖名</label>
                <input class="form-control" id="ImgName" name="ImgName" type="text">
            </div>

            <div class="form-group required">
                <label for="ImgType">圖說種類</label>
                <select class="form-select" name="ImgType" id="ImgType">
                    <option value="">請選擇</option>
                </select>
                <input class="form-control" id="Area" name="Area" type="text" hidden />
            </div>

            <div id="FileUploader"></div>

        </form>
    </div>
</section>
    <div class="edit-button-area">
        <button class="btn btn-back" id="back">返回</button>
        <button class="btn btn-export" id="submit">新增</button>
    </div>

    @section scripts {
        <script>
        var fileUploader
        $(async function () {
            addButtonEvent();
            await pushSelect("ImgType", '@Url.Action("ImgType", "DropDownList")');
            fileUploader = new FileUploader({
                container: "#FileUploader",
                className: "form-group g-col-2 required",
                label: "設計圖說檔案",
                id: "DesignDiagrams",
                customValidityText: "請上傳設計圖說"
            })
        });

        function save() {
            //重置自訂驗證錯誤訊息
            getAllParams().forEach((e) => {
                e.setCustomValidity('');
            })
            //自訂驗證錯誤
            fileUploader.setExtensionValidity(fileUploader.checkAllExtension())
            let isValidity = [...document.forms].map(e => e.reportValidity()).every(e => e);
            console.log("isValidity():", isValidity)
            if (!isValidity) return;

            var form = new FormData();
            form.append("ImgName", document.getElementById("ImgName").value);
            form.append("ImgType", document.getElementById("ImgType").value);
            if (fileUploader.hasFile()) {
                form.append("DesignDiagrams", fileUploader.getFile());
            }

            console.log(Object.fromEntries(form.entries()));
            $.ajax({
                url: '@Url.Action("CreateDesignDiagrams", "DesignDiagrams")',
                data: form,
                type: "POST",
                contentType: false,
                processData: false,
                success: onSuccess,
                error: onError
            })
            function onSuccess(res) {
                console.log(res);
                createDialogModal({
                    id: "DialogModal-Success", inner: "新增成功！",
                    onHide: () => { window.location.href = "/DesignDiagrams/Index"; }
                });
            }
            function onError(res) {
                console.log(res);
                createDialogModal({ id: "DialogModal-Error", inner: `新增失敗！` + `${res?.responseText || ""}` })
            }
        }

        function addButtonEvent() {
            $("#back").click(function () {
                history.back();
            })

            $("#submit").click(function () {
                save();
            })
        }
        </script>
    }
