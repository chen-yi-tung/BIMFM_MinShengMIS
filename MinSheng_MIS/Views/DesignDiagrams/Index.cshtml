@{
    ViewBag.Title = "設計圖說管理";
}

@section styles {
    @Html.Partial("DataGridScripts")
}

<h2>@ViewBag.Title</h2>

<div class="dg-tool-bar">
    <button type="button" class="btn btn-create" id="create">新增設計圖</button>
    <div class="search-area">
        <form class="form" method="post" action="">
            <div class="form-group">
                <label for="ImgNum">圖名</label>
                <input class="form-control" id="ImgName" name="ImgName" type="text" />
            </div>
            <div class="form-group">
                <label for="ImgType">圖說種類</label>
                <select class="form-select" name="ImgType" id="ImgType">
                    <option value="">請選擇</option>
                </select>
            </div>
            <div class="form-group">
                <label for="DateStart">上傳日期(起)</label>
                <input class="form-control" id="DateStart" name="DateStart" type="date" />
            </div>
            <div class="form-group">
                <label for="DateEnd">上傳日期(迄)</label>
                <input class="form-control" id="DateEnd" name="DateEnd" type="date" />
            </div>
            <div class="button-group">
                <button type="button" class="btn btn-search" id="search">查詢</button>
                <button type="reset" class="btn btn-clear" id="clear">清除</button>
            </div>
        </form>
    </div>

    <div class="datagrid-area">
        <table id="DataGrid"></table>
    </div>
</div>

@section scripts {
    <script>

        var getGridJSON = '@Url.Action("DesignDiagrams_Management", "Datagrid")';
        var DataGrid;


        const fakeData = [
            {
                DDSN: "230502002",
                ImgPath: "59.120.37.49:9686/DesignDiagrams/230502002.jpg",
                ImgName: "機電A設計圖",
                ImgType: "機電類",
                UploadDate: "2023/05/02",

            }
        ]
        $(async function () {
            //取得權限
            try {
                await checkAuthority();
                console.log("權限", __authority__);
            } catch (error) {
                console.log("無法取得權限", error);
            }
            await formDropdown.pushSelect({ id: "ImgType", url: '@Url.Action("ImgType", "DropDownList")' });
            Initialize_DataGrid(getGridJSON, __authority__);
            addSearchAreaClickEvent();
            if (__authority__ === "3") {
                document.getElementById('create').classList.add('d-none');
            }
        });

        function Initialize_DataGrid(getGridJSON, authority) {
            let dg = new DG();
            DataGrid = dg.init("#DataGrid", {
                url: getGridJSON,
                // data: fakeData,
                method: 'POST',
                queryParams: getQueryParams(),
                idField: 'DDSN',
                //sortName: 'DDSN',
                remoteSort: true,
                frozenColumns: [[
                    dg.frozenColumn('_view', (v, row, i) => dg.eventButton(i, "檢視", "view")),
                    dg.frozenColumn('_edit', (v, row, i) => dg.eventButton(i, "編輯", "edit", { disabled: authority === "3" })),
                    dg.frozenColumn('_delete', (v, row, i) => dg.eventButton(i, "刪除", "delete", { disabled: authority != "1",className: "btn btn-datagrid btn-delete" })),
                ]],
                columns: [[
                    dg.hiddenColumn('DDSN'),
                    dg.hiddenColumn('ImgPath'),
                    dg.column('ImgName', '圖名', 200),
                    dg.column('ImgType', '圖說種類', 180),
                    dg.column('UploadDate', '上傳日期時間', 180),
                ]]
            })
            dg.addEvent("view", function (row, i) {
                window.open(`${row.ImgPath}`, "_blank")
            })
            dg.addEvent("edit", function (row, i) {
                window.open(`${baseUrl}/Edit/${row.DDSN}`, "_self")
            })
            dg.addEvent("delete", function (row, i) {
                window.open(`${baseUrl}/Delete/${row.DDSN}`, "_self")
            })
        }

        //search area onClick Function
        function addSearchAreaClickEvent() {

            $("#search").click(function () {
                DataGrid.datagrid('load', getQueryParams());
            });

            $("#create").click(function () {
                window.open(`${baseUrl}/Create`, "_self");
            });
        }
    </script>
}
