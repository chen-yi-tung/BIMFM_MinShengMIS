    ViewBag.Title = "ModelView";
}
@section styles{
    <link rel="stylesheet" href="https://developer.api.autodesk.com/modelderivative/v2/viewers/style.min.css?v=v7.60"
        type="text/css">
    <link rel="stylesheet" href="/Content/loading.css" type="text/css">
    <style>
        nav {
            display: none !important;
        }

        .sidebar {
            display: none !important;
        }

        .adsk-viewing-viewer {
            background: none !important;
        }

        .viewer3Dcontainer {
            position: absolute;
            inset: 0;
            width: 100vw;
            height: 100vh;
            margin: 0;
        }

        .forge-spinner {
            display: none !important;
        }

        .pin-area {
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            right: 0;
            z-index: 4 !important;
            overflow: hidden;
            pointer-events: none;
        }

        .pin {
            position: absolute;
            transform: translate(-50%, -50%);
            pointer-events: auto;
            cursor: pointer;
        }

        .pin[id^='pin_bluetooth-'] img {
            transform: scale(0.6);
        }

        .pin-popover {
            position: absolute;
            font-size: 12px;
            transform: translate(0%, -50%);
            width: max-content;
            display: block;

            cursor: auto;
            border-radius: 1.25rem;
            background: rgba(49, 81, 147, 0.60);
            box-shadow: 0px 5px 16px 0px rgba(0, 0, 0, 0.28);
        }

        .pin-popover:not([data-show]) {
            display: none;
        }

        .pin-popover .popover-header {
            border-radius: 1.25rem 1.25rem 0 0;
            background-color: rgba(49, 81, 147, 0.60);
            border-bottom: 2px solid #4465A3;
            color: #fff;
            font-size: 16px;
            padding: 0.75em 0.75em;

            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .pin-popover .popover-body {
            width: 100%;
            color: lightgray;
            padding: 0.5rem 1rem;
        }

        .bluetooth-name {
            background-color: #2750B9;
            color: #fff;
            position: absolute;
            left: 50%;
            top: 100%;
            width: max-content;
            transform: translate(-50%, -20%);
            padding: 1px 3px;
            border-radius: 2px;
        }
    </style>
