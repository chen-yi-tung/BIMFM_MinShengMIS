@{
    ViewBag.Title = "ModelView";
}
@section styles {
    @Html.Partial("DataGridScripts")
    <link rel="stylesheet" href="https://developer.api.autodesk.com/modelderivative/v2/viewers/style.min.css"
        type="text/css">
    <link rel="stylesheet" href="/Content/loading.css" type="text/css">
    <style>
        nav {
            display: none !important;
        }

        .sidebar {
            display: none !important;
        }

        .adsk-viewing-viewer {
            background: none !important;
        }

        .viewer3Dcontainer {
            position: absolute;
            inset: 0;
            width: 100vw;
            height: 100vh;
            margin: 0;
        }

        .forge-spinner {
            display: none !important;
        }

        .pin-area {
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            right: 0;
            z-index: 4 !important;
            overflow: hidden;
            pointer-events: none;
        }

        .pin {
            position: absolute;
            transform: translate(-50%, -50%);
            pointer-events: auto;
            cursor: pointer;
        }

        .pin[id^='pin_bluetooth-'] img {
            transform: scale(0.6);
        }

        .pin[id^='pin_person'] {
            transform: translate(-50%, -80%);
        }

        .pin-popover {
            position: absolute;
            transform: translate(-50%, -50%);
            width: max-content;
            display: block;

            cursor: auto;
            border-radius: 0.31rem;
            background: rgba(236, 246, 255, 0.95);
            box-shadow: 4px 4px 8px 0px rgba(0, 0, 0, 0.50);
        }

        .pin-popover:not([data-show]) {
            display: none;
        }

        .pin-popover .popover-header {
            color: #454A5B;
            font-size: 1.25rem;
            font-weight: 500;
            padding: 0.5rem 0.75rem 0;

            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .pin-popover .popover-body {
            width: 100%;
            color: lightgray;
            padding: 0 1rem 0.5rem;
        }

        .pin[id^='pin_person'] .label {
            color: #909090;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .pin[id^='pin_person'] .value,
        .pin[id^='pin_person'] .unit {
            color: #606060;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .bluetooth-name {
            background-color: #2750B9;
            color: #fff;
            position: absolute;
            left: 50%;
            top: 100%;
            width: max-content;
            transform: translate(-50%, -20%);
            padding: 1px 3px;
            border-radius: 2px;
        }
    </style>
    <!-- Autodesk Forge -->
    <script language="JavaScript" src="https://developer.api.autodesk.com/modelderivative/v2/viewers/viewer3D.min.js"
        defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.meshline/1.4.0/THREE.MeshLine.min.js" defer></script>
    <script src="/Scripts/Forge/Viewer.Loading.js" defer></script>
    <script src="/Scripts/Forge/Viewer.Toolkit.js" defer></script>
    <script src="/Scripts/Forge/ForgePin.js" defer></script>
    <script src="/Scripts/tool.js" defer></script>
}
