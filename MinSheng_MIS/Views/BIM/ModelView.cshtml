<div class="viewer3Dcontainer">
    <div id="viewer3d">
        <div class="pin-area"></div>
    </div>
    <div class="d-flex gap-3 position-absolute top-0 start-0 p-4" style="z-index: 1030;">
        <div class="form-group required">
            <label for="ViewName">棟別樓層</label>
            <select class="form-select" name="ViewName" id="ViewName" required>
                <option value="">請選擇</option>
            </select>
        </div>
        <button type="button" class="btn btn-search align-self-end" id="Submit">確定</button>
    </div>
</div>

@section scripts {
    <script>
        var viewer;
        function initializeViewer({ BIMPath, callback = () => { } }) {
            const clientContainer = document.getElementById('viewer3d')
            const profileSettings = {
                name: "customSettings",
                description: "My personal settings.",
                settings: {}, //API:https://aps.autodesk.com/en/docs/viewer/v7/reference/globals/TypeDefs/Settings/
                persistent: [],
                extensions: {
                    load: ["Viewer.Toolkit"],
                    unload: [/* "Autodesk.Section", "Autodesk.Measure", "Autodesk.Explode" */]
                }
            }
            const options = {
                keepCurrentModels: true,
                globalOffset: { x: 0, y: 0, z: 0 }
            };

            Autodesk.Viewing.Private.InitParametersSetting.alpha = true; //設定透明背景可用
            viewer = new Autodesk.Viewing.GuiViewer3D(clientContainer, { profileSettings });
            viewer.loadExtension("Viewer.Loading", {
                loader: `<div class="lds-default">${Array(12).fill('<div></div>').join('')}</div>`
            })

            Autodesk.Viewing.Initializer({ env: "Local" }, async () => {
                viewer.start();

                await viewer.loadExtension("Viewer.Toolkit")

                //load urns
                const model = await new Promise(async (resolve, reject) => {
                    viewer.loadModel(window.location.origin + BIMPath, options,
                        async (model) => { await viewer.waitForLoadDone(); resolve(model); },
                        async (model) => { reject(model); }
                    )
                })

                //console.log(model)

                //setting 3d view env
                viewer.setBackgroundOpacity(0);
                viewer.setBackgroundColor();
                viewer.setLightPreset(16); //設定環境光源 = 雪地

                viewer.fitToView()
                await onLoadDone(model)
                viewer.loading.hide()
                callback()
            });

            async function onLoadDone(model) {
                console.log("onLoadDone", model)
                //console.log("Model LoadDone", model.loader.basePath.split("/").at(-2));
                return
            }
        }
    </script>
    <script>
        window.addEventListener("load", async () => {
            await formDropdown.pushSelect({ id: "ViewName", url: '@Url.Action("ViewName", "DropDownList")' });
            $("#Submit").click(async () => {
                if ($("#ViewName").val() != '') {
                    window.open("/BIM/FloorModelView?ViewName" + $("#ViewName").val(), "_self")
                    return
                }
                let BIMPath = `/BimModels/民生整棟Forge/Resource/3D 視圖/進抽站/進抽站.svf`
                if (viewer != null) {
                    DestroyViewerAndForgeDraw()
                }
                initializeViewer({
                    BIMPath, callback() { }
                })
            })
        })
    </script>
    <script>
        function getDataAsync(url) {
            return new Promise((success, error) => {
                $.ajax({
                    url: url,
                    type: "GET",
                    dataType: "json",
                    contentType: "application/json;charset=utf-8",
                    success,
                    error
                })
            })
        }
    </script>
}