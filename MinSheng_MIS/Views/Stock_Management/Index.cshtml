@{
    ViewBag.Title = "庫存管理";
}
@section styles {
    @Html.Partial("DataGridScripts")
}
<style>
    .isMinStock td[field='Status'] > .datagrid-cell,
    .isMinStock td[field='Num'] > .datagrid-cell {
        color: rgb(229, 0, 0);
        font-weight: 500;
    }
</style>

<h2>@ViewBag.Title</h2>

<div class="dg-tool-bar">
    <div class="d-flex gap-2">
        <button class="btn btn-create" id="create">新增品項</button>
        <button class="btn btn-create" id="createInbound">新增入庫填報</button>
        <button class="btn btn-create" id="createOutbound">新增出庫填報</button>
    </div>
    <div class="search-area">
        <form class="form" method="post" action="">
            <div class="form-group">
                <label for="Type">類別</label>
                <select class="form-select" name="Type" id="Type"></select>
            </div>
            <div class="form-group">
                <label for="SName">品項名稱</label>
                <input class="form-control" id="SName" name="SName" type="text" />
            </div>
            <div class="form-group">
                <label for="Status">狀態</label>
                <select class="form-select" name="Status" id="Status">
                    <option value="0">請選擇</option>
                    <option value="0">充足</option>
                    <option value="0">低於警戒值</option>
                </select>
            </div>
            <div class="button-group">
                <button type="button" class="btn btn-search" id="search">查詢</button>
                <button type="button" class="btn btn-clear" id="clear">清除</button>
            </div>
        </form>
    </div>
</div>

<div class="datagrid-area">
    <table id="DataGrid"></table>
</div>

@section scripts {
    <script>
        //const baseUrl = '/PlanManagement/';
        var getGridJSON = '@Url.Action("EquipmentInfo_Management", "Datagrid")';
        var DataGrid;

        const fakedata = [
            {
                Type: "潤滑劑",
                SName: '軸承潤滑劑1',
                Status: "低於警戒值",
                Num: "2",
                Init: "罐",
                WarningVal: "5"
            },
            {
                Type: "潤滑劑",
                SName: '軸承潤滑劑2',
                Status: "充足",
                Num: "10",
                Init: "罐",
                WarningVal: "5"
            },
            {
                Type: "潤滑劑",
                SName: '軸承潤滑劑3',
                Status: "充足",
                Num: "10",
                Init: "罐",
                WarningVal: "5"
            },
        ]

        $(async function () {
            //await pushSelect("UserID", '@Url.Action("InspectionUser", "DropDownList")');
            Initialize_DataGrid(fakedata);
            addSearchAreaClickEvent();
        });

        function Initialize_DataGrid(getGridJSON) {
            let dg = new DG();
            DataGrid = dg.init("#DataGrid", {
                //url: getGridJSON,
                data: getGridJSON,
                //method: 'POST',
                queryParams: getQueryParams(),
                idField: 'IPSN',
                frozenColumns: [[
                    dg.frozenColumn('_detail', (v, row, i) => dg.eventButton(i, "詳情", "detail")),
                    dg.frozenColumn('_edit', (v, row, i) => dg.eventButton(i, "編輯", "edit")),
                    dg.frozenColumn('_delete', (v, row, i) => dg.eventButton(i, "刪除", "delete", { className: "btn btn-datagrid btn-delete" })),
                ]],
                columns: [[
                    dg.column('Type', '類別', 200),
                    dg.column('SName', '品項名稱', 300),
                    dg.column('Status', '狀態', 200),
                    dg.column('Num', '數量', 200),
                    dg.column('Init', '單位', 200),
                    dg.column('WarningVal', '警戒值', 200),
                ]],
                rowStyler: (i, row) => row.Status === "低於警戒值" ? { class: 'isMinStock' } : undefined
            })
            dg.addEvent("detail", function (row, i) {
                window.open(`${baseUrl}/Detail/${row.IPSN}`, "_blank")
            })
            dg.addEvent("edit", function (row, i) {
                window.open(`${baseUrl}/Edit/${row.IPSN}`, "_self")
            })
            dg.addEvent("delete", function (row, i) {
                window.open(`${baseUrl}/Delete/${row.IPSN}`, "_self")
            })
        }

        //search area onClick Function
        function addSearchAreaClickEvent() {
            $("#clear").click(function () {
                $(".search-area form")[0].reset();
            });

            $("#search").click(function () {
                DataGrid.datagrid('load', getQueryParams());
            });

            $("#create").click(function () {
                window.open(`${baseUrl}/Create`, "_self");
            });

            $("#createInbound").click(function () {
                window.open(`${baseUrl}/CreateInbound`, "_self");
            });

            $("#createOutbound").click(function () {
                window.open(`${baseUrl}/CreateOutbound`, "_self");
            });
        }
    </script>
}
